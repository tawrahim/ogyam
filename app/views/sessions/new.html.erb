<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>
</header>

<div class="row">
   <div class="span6 offset3">
       <%= form_for(:session, url: sessions_path)  do |f| %>
           <%= f.label :email, 'email' %>
           <%= f.text_field :email %>

           <%= f.label :password, 'password' %>
           <%= f.password_field :password %>

           <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
       <% end %>
       <p>New user? <%= link_to "Signup now!", signup_path  %></p>
      <p>Forgot your Password?<%= link_to "reset", new_password_reset_path %></p>
   </div>
</div>
