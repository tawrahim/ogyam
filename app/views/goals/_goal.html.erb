<li>
 <span class="content"><%= goal.content %></span>
 <span class="timestamp">
   Posted <%= time_ago_in_words(goal.created_at) %>
 </span>
 <% if current_user?(goal.user)  %>
   <%= link_to "delete", goal, method: :delete,
                               confirm: "You sure"
                               title: goal.content %>
 <% end %>
</li>
